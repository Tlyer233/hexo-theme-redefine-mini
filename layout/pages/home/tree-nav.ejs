<script>
function toggleFolder(element) {
    const navItems = element.nextElementSibling;
    const navGroup = element.parentElement;
    
    if (navItems.classList.contains('open')) {
        navItems.classList.remove('open');
        navGroup.classList.remove('open');
    } else {
        navItems.classList.add('open');
        navGroup.classList.add('open');
    }
}

function toggleSubfolder(element) {
    const navSubitems = element.nextElementSibling;
    
    if (navSubitems.classList.contains('open')) {
        navSubitems.classList.remove('open');
        element.classList.remove('open');
    } else {
        navSubitems.classList.add('open');
        element.classList.add('open');
    }
}

// é¡µé¢åŠ è½½æ—¶å¤„ç†ç›®å½•çŠ¶æ€
document.addEventListener('DOMContentLoaded', function() {
    const currentArticle = document.querySelector('.nav-article.current-article');
    
    if (currentArticle) {
        // å¦‚æœæœ‰å½“å‰æ–‡ç« ï¼Œæ»šåŠ¨åˆ°è¯¥ä½ç½®
        setTimeout(() => {
            const treeNav = document.querySelector('.tree-nav');
            if (treeNav && currentArticle) {
                const articleRect = currentArticle.getBoundingClientRect();
                const navRect = treeNav.getBoundingClientRect();
                const scrollTop = currentArticle.offsetTop - treeNav.offsetTop - (navRect.height / 2) + (articleRect.height / 2);
                treeNav.scrollTo({
                    top: Math.max(0, scrollTop),
                    behavior: 'smooth'
                });
            }
        }, 300);
    } else {
        // å¦‚æœæ²¡æœ‰å½“å‰æ–‡ç« ï¼ˆé¦–é¡µï¼‰ï¼Œå±•å¼€ç¬¬ä¸€ä¸ªåˆ†ç»„
        const firstFolder = document.querySelector('.nav-folder');
        if (firstFolder && !document.querySelector('.nav-group.open')) {
            toggleFolder(firstFolder);
        }
    }
});
</script>