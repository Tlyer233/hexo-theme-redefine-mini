<div class="tree-nav">
    <%
    // è·å–æ‰€æœ‰æ–‡ç« å¹¶æŒ‰åˆ†ç±»ç»„ç»‡
    const allPosts = site.posts.sort('date', -1);
    const categoryTree = {};
    
    // è·å–å½“å‰æ–‡ç« ï¼ˆå¦‚æœåœ¨æ–‡ç« é¡µé¢ï¼‰
    const currentPostPath = typeof currentPost !== 'undefined' && currentPost ? currentPost.path : (typeof page !== 'undefined' && page.path ? page.path : null);
    let currentMainCat = null;
    let currentSubCat = null;
    
    allPosts.forEach(post => {
        if (post.categories && post.categories.length > 0) {
            const cats = post.categories.toArray();
            if (cats.length >= 1) {
                const mainCat = cats[0].name;
                if (!categoryTree[mainCat]) {
                    categoryTree[mainCat] = { subCats: {}, posts: [] };
                }
                
                // æ£€æŸ¥æ˜¯å¦æ˜¯å½“å‰æ–‡ç« ï¼Œè®°å½•å…¶åˆ†ç±»
                if (currentPostPath && post.path === currentPostPath) {
                    currentMainCat = mainCat;
                    if (cats.length >= 2) {
                        currentSubCat = cats[1].name;
                    }
                }
                
                if (cats.length >= 2) {
                    const subCat = cats[1].name;
                    if (!categoryTree[mainCat].subCats[subCat]) {
                        categoryTree[mainCat].subCats[subCat] = [];
                    }
                    categoryTree[mainCat].subCats[subCat].push(post);
                } else {
                    categoryTree[mainCat].posts.push(post);
                }
            }
        }
    });
    
    // è‡ªç„¶æ’åºå‡½æ•°ï¼šæ­£ç¡®å¤„ç†æ•°å­—ï¼ˆ1, 2, 10 è€Œä¸æ˜¯ 1, 10, 2ï¼‰
    const naturalSort = (a, b) => {
        return a.localeCompare(b, 'zh-CN', { numeric: true, sensitivity: 'base' });
    };
    
    // å¯¹åˆ†ç±»è¿›è¡Œè‡ªç„¶æ’åº
    const sortedMainCats = Object.keys(categoryTree).sort(naturalSort);
    
    // å®šä¹‰åˆ†ç±»å›¾æ ‡
    const catIcons = {
        'ğŸçˆ¬è™«å·¥ç¨‹å¸ˆ': 'fa-solid fa-snake',
        'ğŸ˜¼Javaå…¨æ ˆå·¥ç¨‹å¸ˆ': 'fa-brands fa-java',
        'ğŸ«è€ƒç ”': 'fa-solid fa-graduation-cap',
        'ğŸ”¬å®æˆ˜é¡¹ç›®': 'fa-solid fa-flask'
    };
    
    // æ’åºå‡½æ•°ï¼šæŒ‰æ ‡é¢˜è‡ªç„¶æ’åº
    const sortByTitle = (a, b) => naturalSort(a.title, b.title);
    %>
    
    <% for (let mainCat of sortedMainCats) { 
        const isCurrentMainCat = currentMainCat === mainCat;
    %>
        <div class="nav-group <%= isCurrentMainCat ? 'open' : '' %>">
            <div class="nav-folder" onclick="toggleFolder(this)">
                <i class="<%= catIcons[mainCat] || 'fa-solid fa-folder' %> folder-icon"></i>
                <i class="fa-solid fa-chevron-right toggle-icon"></i>
                <span class="folder-name"><%= mainCat %></span>
            </div>
            <div class="nav-items <%= isCurrentMainCat ? 'open' : '' %>">
                <% 
                const subCats = categoryTree[mainCat].subCats;
                const directPosts = categoryTree[mainCat].posts;
                
                // å¯¹å­åˆ†ç±»è¿›è¡Œè‡ªç„¶æ’åº
                const sortedSubCats = Object.keys(subCats).sort(naturalSort);
                
                for (let subCat of sortedSubCats) { 
                    const isCurrentSubCat = currentSubCat === subCat && isCurrentMainCat;
                %>
                    <div class="nav-subfolder <%= isCurrentSubCat ? 'open' : '' %>" onclick="toggleSubfolder(this)">
                        <i class="fa-solid fa-folder-open subfolder-icon"></i>
                        <i class="fa-solid fa-chevron-right toggle-icon"></i>
                        <span class="subfolder-name"><%= subCat %></span>
                    </div>
                    <div class="nav-subitems <%= isCurrentSubCat ? 'open' : '' %>">
                        <% 
                        // å¯¹å­åˆ†ç±»ä¸‹çš„æ–‡ç« æŒ‰æ ‡é¢˜è‡ªç„¶æ’åº
                        const sortedSubPosts = subCats[subCat].sort(sortByTitle);
                        sortedSubPosts.forEach(post => { 
                            const isCurrentArticle = currentPostPath && post.path === currentPostPath;
                        %>
                            <a class="nav-article <%= isCurrentArticle ? 'current-article' : '' %>" href="<%- url_for(post.path) %>" <% if (isCurrentArticle) { %>data-current="true"<% } %>>
                                <i class="fa-regular fa-file-lines"></i>
                                <span><%= post.title %></span>
                            </a>
                        <% }); %>
                    </div>
                <% } %>
                
                <% 
                // å¯¹ç›´æ¥æ–‡ç« æŒ‰æ ‡é¢˜è‡ªç„¶æ’åº
                const sortedDirectPosts = directPosts.sort(sortByTitle);
                sortedDirectPosts.forEach(post => { 
                    const isCurrentArticle = currentPostPath && post.path === currentPostPath;
                %>
                    <a class="nav-article direct-article <%= isCurrentArticle ? 'current-article' : '' %>" href="<%- url_for(post.path) %>" <% if (isCurrentArticle) { %>data-current="true"<% } %>>
                        <i class="fa-regular fa-file-lines"></i>
                        <span><%= post.title %></span>
                    </a>
                <% }); %>
            </div>
        </div>
    <% } %>
</div>

